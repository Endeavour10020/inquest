{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "incremental": true,
        "outDir": "./build",
        "sourceMap": true,
        "lib": ["esnext"],
        "target": "es6",
        "strictNullChecks": true
    },
    "include": ["src/**/*.ts"]
}
